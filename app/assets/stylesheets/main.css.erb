body{
  background-image: url(<%=asset_path "dimension.png"%>);
  background-color: #ecf0f1;
}

.top-section{
  background-color: #c0392b;
  position: fixed;
  top: 0;
  left: 0;
  text-align: center;
  width: 100%;
  padding: 7px;
  color: white;
  font-family: Arial, serif;
}

.spacer{
  margin-top: 150px;
}

.game-description {
  text-align: center;
  width: 20%;
  clear: right;
  /*margin: auto;*/
  margin: 20px;
  margin-top: 0;
  height: 150px;
  width: 20em;
  float: left;
  padding: 7px;
  color: white;
  font-family: Arial, serif;
  /*border: white 1px solid;*/
  border-radius: 3px;
  background-color: #34495e;
}

.sort-buttons {
  text-align: center;
  margin: 20px auto;
  width: 100%;
  padding: 7px;
  color: white;
  font-family: Arial, serif;
}

.sort-buttons a{
  margin-top: 5px;
}

.description {
  color: grey;
}

.game-full-description {
  width: 20%;
  /*margin: auto;*/
  margin: 20px;
  width: 20em;
  float: left;
  margin-top: 30px;
  padding: 7px;
  color: white;
  font-family: Arial, serif;
  /*border: white 1px solid;*/
  border-radius: 3px;
  background-color: #34495e;
}

.game-create {
  width: 20%;
  /*margin: auto;*/
  margin: 20px;
  width: 40em;
  float: left;
  margin-top: 30px;
  padding: 7px;
  color: white;
  font-family: Arial, serif;
  /*border: white 1px solid;*/
  border-radius: 3px;
  background-color: #34495e;
}

textarea, input {
  width: 40em;
  margin-bottom: 10px;
  background-color: #ecf0f1;
}


.regular-button, .regular-button a{
  border-radius: 5px;
  background-color: #0066FF;
  color: white;
  margin: 10px 0;
  padding: 3px;
  width: 15em;
  height: 2.75em;
  text-decoration: none;
}

.subdued-button {
  border-radius: 5px;
  background-color: grey;
  color: white;
  margin: 10px 0;
  padding: 3px;
  width: 15em;
  height: 2.75em;
  text-decoration: none;
}

.subdued-button:hover {
  border-radius: 5px;
  background-color: #34495e;
  color: white;
  margin: 10px 0;
  padding: 3px;
  width: 15em;
  height: 2.75em;
  text-decoration: none;
}

.big-button, .big-button a{
  border-radius: 10px;
  background-color: #0066FF;
  color: white;
  margin: 10px 0;
  padding: 3px;
  width: 50%;
  height: 3em;
  font-size: 1.5em;
  text-decoration: none;
}

h1, h2 {
  font-family: 'Finger Paint', cursive;
  font-size: 1.25em;
  margin: .5em 0 0 0;
  padding: 0px;
}

h3, h4 {
  font-family: Arial, serif;
  font-size: 1em;
  margin: .5em 0 0 0;
  padding: 0px
}

.likes {
  font-family: Arial, serif;
  font-size: .7em;
  font-style: italic;
}
