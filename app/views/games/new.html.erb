<div class="game-description">
  <%= form_for @game, url: {action: "create"} do |f|  %>
    <%= f.label :name, "What's this game called?" %><br>
    <%= f.text_field :name %> <br>

    <%= f.label :description, "How do you play?" %><br>
    <%= f.text_area :description  %> <br>

    <%= f.label :equipment, "What gear do you need?"%><br>
    <%= f.text_field :equipment  %> <br>
    <%= f.submit "Share this game!", class: "big-button" %>
  <% end %>

  <%= link_to "Cancel", :root, class:'regular-button' %>
</div>
