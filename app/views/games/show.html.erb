<div class="game-full-description">
  <h2><%= @game.name %> </h2><br>

  <!-- AddThis Button BEGIN -->
  <div class="addthis_toolbox addthis_default_style ">
    <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
    <a class="addthis_button_tweet"></a>
    <a class="addthis_button_pinterest_pinit"></a>
    <a class="addthis_counter addthis_pill_style"></a>
  </div>
  <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=xa-5210c6694764912d"></script>
  <!-- AddThis Button END -->

  <h3>Description:</h3> <p> <%= @game.description %> </p>
  <h3>Equipment:</h3> <p> <%= @game.equipment %> </p>
  <h3>Likes:</h3> <p> <%= @game.votes.count %>

    <%= form_for @vote, url: game_votes_path(@game) do |f|  %>
      <%= f.submit "Like", class: "big-button" %>
    <% end %>



  <%= link_to "Back to big list", :root, class:'regular-button' %>
</div>


<iframe title="YouTube video player" class="youtube-player" type="text/html"
width="640" height="390" src="<%= @game.video_url %>"
frameborder="0" allowFullScreen></iframe>



